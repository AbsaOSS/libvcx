    "sinon": "^4.1.2",
    "sleep-promise": "^8.0.1",
    "standard": "^14.3.1",
    "ts-node": "^6.1.2",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.1.0",
    "typedoc": "^0.15.4",
    "typescript": "^3.0.0",
    "winston": "^3.2.1"
  },
  "main": "dist/src/index.js"
}
