    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "6.2.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^5.0.5",
    "express": "^4.17.1",
    "is-port-reachable": "^2.0.1",
    "jsdoc": "^3.6.3",
    "mocha": "^7.2.0",
    "node-persist": "^3.1.0",
